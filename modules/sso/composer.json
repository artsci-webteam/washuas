{
    "name": "washuas/sso",
    "description": "SSO and related modules / configuration to be used with WashU A&S multisites",
    "type": "drupal-custom-module",
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/artsci-webteam/sso",
    "config": {
        "allow-plugins": {
            "simplesamlphp/composer-module-installer": true
        }
    },
    "require": {
        "drupal/simplesamlphp_auth": "^4.0",
        "drupal/core": "^9.4 || ^10"
    },
    "scripts": {
        "post-install-cmd": [
            "scripts/symlink-simplesaml-config.sh"
        ],
        "post-update-cmd": [
            "scripts/symlink-simplesaml-config.sh"
        ]
    },
    "authors": [
        {
            "name": "WashU A&S",
            "homepage": "https://artsci.wustl.edu/",
            "role": "Maintainer"
        }
    ]
}
